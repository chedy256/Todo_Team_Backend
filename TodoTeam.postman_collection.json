          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"username\": \"John Doe\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] }
          },
          "response": [
            { "code": 200, "body": "{\"id\": 1, \"token\": \"jwt...\"}" }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
          },
          "response": [
            { "code": 200, "body": "{\"id\": 1, \"token\": \"jwt...\"}" }
          ]
        }
      ]
    },
    {
      "name": "Users",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
        "url": { "raw": "{{baseUrl}}/users", "host": ["{{baseUrl}}"], "path": ["users"] }
      },
      "response": [
        { "code": 200, "body": "[{\"id\":1,\"username\":\"John Doe\",\"email\":\"john@example.com\"}]" }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get Tasks",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": { "raw": "{{baseUrl}}/tasks", "host": ["{{baseUrl}}"], "path": ["tasks"] }
          },
          "response": [
            { "code": 200, "body": "[{\"id\":1,\"title\":\"Task 1\",\"description\":\"...\",\"priority\":\"NORMAL\",\"completed\":false,\"dueDate\":1724600000,\"ownerId\":1,\"assignedId\":null,\"lastUpdate\":1724600000}]" }
          ]
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": { "raw": "{{baseUrl}}/tasks/1", "host": ["{{baseUrl}}"], "path": ["tasks", "1"] }
          },
          "response": [
            { "code": 200, "body": "{\"id\":1,\"title\":\"Task 1\",\"description\":\"...\",\"priority\":\"NORMAL\",\"completed\":false,\"dueDate\":1724600000,\"ownerId\":1,\"assignedId\":null,\"lastUpdate\":1724600000}" }
          ]
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" }, { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Description...\",\n  \"priority\": \"NORMAL\",\n  \"dueDate\": 1724600000,\n  \"assigneeId\": null\n}"
            },
            "url": { "raw": "{{baseUrl}}/tasks", "host": ["{{baseUrl}}"], "path": ["tasks"] }
          },
          "response": [
            { "code": 200, "body": "{\"taskId\":1}" }
          ]
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" }, { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated...\",\n  \"priority\": \"HIGH\",\n  \"dueDate\": 1724600000,\n  \"assigneeId\": 2,\n  \"completed\": false\n}"
            },
            "url": { "raw": "{{baseUrl}}/tasks/1", "host": ["{{baseUrl}}"], "path": ["tasks", "1"] }
          },
          "response": [
            { "code": 200, "body": "{\"status\":\"success\"}" }
          ]
        },
        {
          "name": "Update Task Completion (Assignee/Owner)",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" }, { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"completed\": true\n}"
            },
            "url": { "raw": "{{baseUrl}}/tasks/1", "host": ["{{baseUrl}}"], "path": ["tasks", "1"] }
          },
          "response": [
            { "code": 200, "body": "{\"status\":\"success\"}" }
          ]
        },
        {
          "name": "Self-Assign to Task",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" }, { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assigneeId\": {{userId}}\n}"
            },
            "url": { "raw": "{{baseUrl}}/tasks/1", "host": ["{{baseUrl}}"], "path": ["tasks", "1"] }
          },
          "response": [
            { "code": 200, "body": "{\"status\":\"success\"}" }
          ]
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
            "url": { "raw": "{{baseUrl}}/tasks/1", "host": ["{{baseUrl}}"], "path": ["tasks", "1"] }
          },
          "response": [
            { "code": 200, "body": "{\"status\":\"success\"}" }
          ]
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
